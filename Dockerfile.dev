# Development Dockerfile for ManitoDebug
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    git \
    curl \
    bash \
    postgresql-client \
    && rm -rf /var/cache/apk/*

# Copy package files
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/
COPY core/package*.json ./core/

# Install dependencies
RUN npm run install:all

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p server/uploads server/logs client/dist scripts/test-upload

# Set environment variables for dynamic port management
ENV NODE_ENV=development
ENV ENABLE_DYNAMIC_PORTS=true
ENV PORT_RANGE_START=3000
ENV PORT_RANGE_END=3010
ENV CLIENT_PORT_RANGE_START=5173
ENV CLIENT_PORT_RANGE_END=5180
ENV WEBSOCKET_PORT_RANGE_START=3001
ENV WEBSOCKET_PORT_RANGE_END=3010

# Expose dynamic port ranges
EXPOSE 3000-3010 5173-5180 9229

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

# Development startup script
COPY scripts/start-dev.sh /usr/local/bin/start-dev.sh
RUN chmod +x /usr/local/bin/start-dev.sh

# Set the default command
CMD ["/usr/local/bin/start-dev.sh"]