# Environment file for local development with Supabase
# Copy this to .env and modify as needed

# === SUPABASE CONFIGURATION ===
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# === DATABASE CONFIGURATION (FALLBACK) ===
# Only used if Supabase is not available
DB_HOST=localhost
DB_PORT=5432
DB_NAME=admin_panel
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# === REDIS CONFIGURATION ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === JWT CONFIGURATION ===
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# === APPLICATION CONFIGURATION ===
NODE_ENV=development
PORT=3000
APP_NAME=Admin Panel Service
APP_VERSION=1.0.0
TENANT_ID=default
ADMIN_EMAIL=admin@localhost

# === CORS CONFIGURATION ===
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# === EXTERNAL API KEYS ===
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GITHUB_TOKEN=your-github-token

# === WEBHOOK CONFIGURATION ===
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_ENDPOINTS=https://yourapp.com/webhooks/admin

# === FEATURE FLAGS ===
FEATURE_TYPE_COVERAGE=true
FEATURE_PACKAGE_MANAGEMENT=true
FEATURE_GITHUB_INTEGRATION=false
FEATURE_REAL_TIME_UPDATES=true
FEATURE_WEBHOOKS=true
FEATURE_AUDIT_LOGS=true

# === LOGGING CONFIGURATION ===
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console

# === MONITORING CONFIGURATION ===
MONITORING_ENABLED=false
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# === SECURITY CONFIGURATION ===
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# === EMAIL CONFIGURATION (OPTIONAL) ===
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=false
EMAIL_FROM=noreply@admin-panel.com

# === FILE UPLOAD CONFIGURATION ===
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads/

# === FRONTEND CONFIGURATION ===
FRONTEND_PORT=3001
VITE_API_URL=http://localhost:3000/api
VITE_SOCKET_URL=http://localhost:3000
VITE_APP_NAME=Admin Panel
VITE_APP_VERSION=1.0.0
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_TENANT_ID=default

# Copy frontend feature flags
VITE_FEATURE_TYPE_COVERAGE=true
VITE_FEATURE_PACKAGE_MANAGEMENT=true
VITE_FEATURE_GITHUB_INTEGRATION=false
VITE_FEATURE_REAL_TIME_UPDATES=true

# === DOCKER CONFIGURATION ===
BUILD_TARGET=development
API_PORT=3000
FRONTEND_PORT=3001

# === OPTIONAL SERVICES PORTS ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
GRAFANA_PASSWORD=admin
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# === DEVELOPMENT HELPERS ===
# Uncomment to enable specific Docker Compose profiles
# COMPOSE_PROFILES=monitoring
# COMPOSE_PROFILES=local-db
# COMPOSE_PROFILES=local-supabase
# COMPOSE_PROFILES=reverse-proxy